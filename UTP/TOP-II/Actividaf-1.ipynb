"# Generación de datos ",
"n_normal = 1200 ",
"n_dos    = 800 ",
" ",
"# Normal ",
"pkts_n   = rng.normal(60, 8, n_normal) ",
"bytes_n  = rng.normal(700, 90, n_normal) ",
"dur_n    = rng.normal(30, 6, n_normal) ",
