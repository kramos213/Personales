"    np.c_[pkts_a, bytes_a, dur_a, conns_a] ",
"]) ",
"y = np.array([0]*n_normal + [1]*n_dos) ",
" ",
"cols = ["pkts_per_sec","bytes_per_pkt","duration","conn_rate"] ",
"df = pd.DataFrame(X, columns=cols) ",
"df["label"] = y ",
"df.head() "
